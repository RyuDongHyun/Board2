<h4>가입자 : <%= @users.length%>명</h4>
<h1><br></h1>
<h1>게시판</h1>
<a href="/posts/new"><button type="button" class="btn btn-primary">새글쓰기</button></a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">번호</th>
      <th scope="col">제목</th>
      <th scope="col">작성자</th>
      <th scope="col">작성날짜</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.reverse.each do |p|%>
    <tr>
      <th scope="row"><%= p.id%></th>
      <td><a href="/posts/show/<%= p.id%>"><%= p.title%></a></td>
      <td><%= p.name%></td>
      <td><%= time_ago_in_words(p.created_at)%></td>
    </tr>
    <% end %>
  </tbody>
</table>

